<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/num1"
        android:layout_width="112dp"
        android:layout_height="44dp"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:hint="Enter num1"
        android:inputType="number"
        android:textColor="#DBD6D6"
        android:textColorHint="#DBD6D6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="116dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Enter num2"
        android:inputType="number"
        android:textColor="#DBD6D6"
        android:textColorHint="#DBD6D6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num1" />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="44dp"
        android:layout_height="33dp"
        android:layout_marginTop="56dp"
        android:background="#FFFFFF"
        android:onClick="doPlus"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_result" />

    <TextView
        android:id="@+id/text_result"
        android:layout_width="93dp"
        android:layout_height="44dp"
        android:layout_marginTop="76dp"
        android:text="View result"
        android:textColor="#DBD6D6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.676"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num2" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="44dp"
        android:layout_height="33dp"
        android:layout_marginTop="56dp"
        android:background="#FFFFFF"
        android:onClick="doMinus"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_result" />

    <Button
        android:id="@+id/button_division"
        android:layout_width="44dp"
        android:layout_height="33dp"
        android:layout_marginTop="140dp"
        android:background="#FFFFFF"
        android:onClick="doDivision"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_result" />

    <Button
        android:id="@+id/button_multiplication"
        android:layout_width="44dp"
        android:layout_height="33dp"
        android:layout_marginTop="140dp"
        android:background="#FFFFFF"
        android:onClick="doMultiplication"
        android:text="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_result" />
</androidx.constraintlayout.widget.ConstraintLayout>